<ul class="media-list">
  <% microposts.each do |micropost| %>
    <li class="media">
      <div class="media-body">
        <div class="panel panel-default">
        <div class="panel-heading">
        <h3 class="panel-title">タスク詳細</h3>
        </div>
       <div class="panel-body">
       <ul class="list-unstyled">
      <li>タイトル【<%= micropost.title %>】</li>
      <li>タスク内容【<%= micropost.content %>】</li>
      <li><span class="text-muted">作成日時 <%= micropost.created_at %></span><span class="timestamp">(Posted <%= time_ago_in_words(micropost.created_at) %> ago)</span></li>
      <div>
          <div class="col-xs-2">
           <%= render 'favorites/fav_button', micropost: micropost %>
          </div>
           <%= link_to '編集',edit_micropost_path(micropost), class: 'btn btn-primary btn-xs'%>
          <% if current_user == micropost.user %>
            <%= link_to "削除", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-info btn-xs' %>
          <% end %>
      </ul>
      </div>
     </div>
         <div>
          
          <div class="col-xm-12">
          </div>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>