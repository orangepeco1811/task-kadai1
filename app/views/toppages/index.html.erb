<% if logged_in? %>
   <div class="row">
      <aside class="col-xs-4">
      <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">こんにちは、<%= @user.name %>さん★</h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 70 }) %>" alt="">
      </div>
    </div>
   
      <%= form_for(@micropost) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
           <span class="glyphicon glyphicon-pencil"></span><%= f.label :title, 'タスクタイトル' %> 
          <%= f.text_area :title, class: 'form-control', rows: 1 %>
        </div>
        <div class="form-group">
         <span class="glyphicon glyphicon-pencil"></span> <%= f.label :content, 'タスク内容' %>  
          <%= f.text_area :content, class: 'form-control', rows: 3 %>
        </div>

        <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
      
      <% end %>

  </aside>
  <div class="col-xs-8">

    <%= render 'microposts/microposts', microposts: @microposts %>
  </div>
  
  </div>
    
    
<% else %>
<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>Welcome to Tasklist</h1>
        <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

